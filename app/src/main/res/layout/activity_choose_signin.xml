<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_choose_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devolper.complaintfyp.chooseSigninActivity">
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:id="@+id/space"
        android:layout_height="40dp" />
    <ImageView android:src="@drawable/login_image"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@id/space"
        android:id="@+id/logoImg"
        android:layout_gravity="center_horizontal" />
    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="2"
        android:layout_below="@id/logoImg"
        android:id="@+id/topLayout"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_columnWeight="1"
            android:text="\n\n\n\n\nLogin as Student\n"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:id="@+id/btnStdLogin" />
        <Button
            android:layout_columnWeight="1"
            android:text="\n\n\n\n\nLogin as Admin\n"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:id="@+id/btnAdminLogin" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="2"
        android:id="@+id/bottomLayout"
        android:layout_below="@id/topLayout"
        android:layout_height="wrap_content">

        <Button
            android:layout_columnWeight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_corner"
            android:text="Register as Student"
            android:padding="10dp"
            android:id="@+id/btnStdRegister" />
    </GridLayout>
</RelativeLayout>
