<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context="com.devolper.complaintfyp.admin.adminHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/round_corner"
            android:text="APPROVE ACCOUNT "
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:id="@+id/admin_approve"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner"
            android:textColor="@color/colorPrimary"
            android:text="ADD ACCOUNT "
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:id="@+id/admin_add"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner"
            android:textColor="@color/colorPrimary"
            android:text="Delete ACCOUNT "
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:id="@+id/admin_del"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner"
            android:textColor="@color/colorPrimary"
            android:text="Logout "
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:id="@+id/admin_logout"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace" />
    </LinearLayout>
</RelativeLayout>
