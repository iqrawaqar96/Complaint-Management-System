<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actiity_complanit_catagory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@color/dark"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:src="@drawable/login_image"
                android:layout_width="wrap_content"
                android:id="@+id/login_image"
                android:visibility="visible"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp" />
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_below="@id/login_image"
            android:id="@+id/topLayout"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_columnWeight="1"
                android:text="\nDepartment\n"
                android:background="@drawable/rounded_corner"
                android:layout_margin="10dp"
                android:id="@+id/btnCmpDept" />
            <Button
                android:layout_columnWeight="1"
                android:text="\nCafetaria\n"
                android:background="@drawable/rounded_corner"
                android:layout_margin="10dp"
                android:id="@+id/btnCmpCafe" />

            <Button
                android:layout_columnWeight="1"
                android:text="\n Transport\n"
                android:background="@drawable/rounded_corner"
                android:layout_margin="10dp"
                android:id="@+id/btnCmpTransport" />
            <Button
                android:layout_columnWeight="1"
                android:text="\nGymnasium\n"
                android:background="@drawable/rounded_corner"
                android:layout_margin="10dp"
                android:id="@+id/btnCmpGym" />
            <Button
            android:layout_columnWeight="1"
            android:text="\nSecurity\n"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:id="@+id/btnCmpSecurity" />
            <Button
                android:layout_columnWeight="1"
                android:text="\nOther\n"
                android:background="@drawable/rounded_corner"
                android:layout_margin="10dp"
                android:id="@+id/btnCmpOther" />
        </GridLayout>
        </RelativeLayout>
    </ScrollView>

   <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/activity_main2_drawer"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main2"
        android:id="@+id/nav_view">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

